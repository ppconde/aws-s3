{
    "info": {
        "name": "AWS S3 Upload/Download API",
        "description": "Complete API testing collection for S3 file upload/download with JWT authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                },
                "description": "Check if the server is running"
            },
            "response": []
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('jwt_token', response.data.token);",
                                    "    pm.environment.set('user_id', response.data.user.id);",
                                    "    pm.environment.set('user_email', response.data.user.email);",
                                    "    console.log('JWT Token saved:', response.data.token);",
                                    "}",
                                    "",
                                    "pm.test('Status code is 201', function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test('Response has token', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.token).to.exist;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"name\": \"{{test_name}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register a new user account"
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('jwt_token', response.data.token);",
                                    "    pm.environment.set('user_id', response.data.user.id);",
                                    "    pm.environment.set('user_email', response.data.user.email);",
                                    "    console.log('JWT Token saved:', response.data.token);",
                                    "}",
                                    "",
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has token', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.token).to.exist;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login and receive JWT token"
                    },
                    "response": []
                }
            ],
            "description": "User authentication endpoints"
        },
        {
            "name": "File Operations",
            "item": [
                {
                    "name": "1. Get Upload URL",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('upload_url', response.data.uploadUrl);",
                                    "    pm.environment.set('file_id', response.data.fileId);",
                                    "    pm.environment.set('s3_key', response.data.key);",
                                    "    pm.environment.set('content_type', response.data.contentType);",
                                    "    console.log('Upload URL saved');",
                                    "    console.log('File ID:', response.data.fileId);",
                                    "    console.log('Content-Type:', response.data.contentType);",
                                    "}",
                                    "",
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has upload URL', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.uploadUrl).to.exist;",
                                    "    pm.expect(jsonData.data.fileId).to.exist;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fileName\": \"test-document.pdf\",\n  \"fileSize\": 1024000\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/files/upload-url",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "files",
                                "upload-url"
                            ]
                        },
                        "description": "Generate pre-signed URL for file upload. Content type is auto-detected from file extension (.pdf -> application/pdf). You can also specify contentType explicitly if needed."
                    },
                    "response": []
                },
                {
                    "name": "2. Upload File to S3 (Manual)",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "{{content_type}}",
                                "description": "Auto-populated from step 1. Must match the file type."
                            }
                        ],
                        "body": {
                            "mode": "file",
                            "file": {
                                "src": ""
                            }
                        },
                        "url": "{{upload_url}}",
                        "description": "Upload the actual file to S3 using the pre-signed URL from step 1. Select a file in the Body tab."
                    },
                    "response": []
                },
                {
                    "name": "3. List Files",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has files array', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.files).to.be.an('array');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/files",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "files"
                            ]
                        },
                        "description": "List all files for the authenticated user"
                    },
                    "response": []
                },
                {
                    "name": "4. Get File Metadata",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has metadata', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.contentType).to.exist;",
                                    "    pm.expect(jsonData.data.size).to.exist;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/files/{{file_id}}/metadata",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "files",
                                "{{file_id}}",
                                "metadata"
                            ]
                        },
                        "description": "Get metadata for a specific file"
                    },
                    "response": []
                },
                {
                    "name": "5. Get Download URL",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('download_url', response.data.downloadUrl);",
                                    "    console.log('Download URL saved');",
                                    "}",
                                    "",
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('Response has download URL', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.data.downloadUrl).to.exist;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/files/{{file_id}}/download-url",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "files",
                                "{{file_id}}",
                                "download-url"
                            ]
                        },
                        "description": "Generate pre-signed URL for file download"
                    },
                    "response": []
                },
                {
                    "name": "6. Download File from S3 (Manual)",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": "{{download_url}}",
                        "description": "Download the file from S3 using the pre-signed URL from step 5. Click Send and Download button."
                    },
                    "response": []
                },
                {
                    "name": "7. Delete File",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test('File deleted successfully', function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.success).to.be.true;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/files/{{file_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "files",
                                "{{file_id}}"
                            ]
                        },
                        "description": "Delete a file from S3"
                    },
                    "response": []
                }
            ],
            "description": "File upload, download, and management operations",
            "auth": {
                "type": "bearer",
                "bearer": [
                    {
                        "key": "token",
                        "value": "{{jwt_token}}",
                        "type": "string"
                    }
                ]
            }
        },
